#include <sstream>
#include <iostream>
#include <algorithm>
#include <unordered_map>

using namespace std;


int main(){
    long long int n;
    long long int m;
    cin >> n >> m;
    if(m<n)
        cout<<n-m;
    else{
          long long int mod = m%n;
        if(mod == 0)
            cout<<"0";
        else
            cout<<n-mod;
        
    }
    return 0;
}
